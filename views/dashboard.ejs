<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css">
    <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
</head>
<body>
    <div class="container mt-4">
        <h1>Welcome, <%= user.fullName %>!</h1>
        <p>Role: <%= user.role %></p>

        <h2>Actions</h2>
        <div class="row">
            <% if (user.role === 'Patient') { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Patient Actions</h5>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/profile/<%= user._id %>">View Profile</a></li>
                                <li class="list-group-item"><a href="/Patient_Form.html">Fill Patient Form</a></li>
                                <li class="list-group-item"><a href="/vitals">Add Vitals</a></li>
                                <li class="list-group-item"><a href="/view_vitals">View Vitals</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } else if (user.role === 'Physician') { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Physician Actions</h5>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/profile/<%= user._id %>">View Profile</a></li>
                                <li class="list-group-item"><a href="/Physician_Form.html">Fill Physician Form</a></li>
                                <li class="list-group-item"><a href="/view_patients">View All Patients</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } else if (user.role === 'Pharmacist') { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Pharmacist Actions</h5>
                            <ul class="list-group">
                                <li class="list-group-item"><a href="/profile/<%= user._id %>">View Profile</a></li>
                                <li class="list-group-item"><a href="/Pharmacist_Form.html">Fill Pharmacist Form</a></li>
                                <li class="list-group-item"><a href="/view_patients">View All Patients</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <!-- <h2 class="logout"><a href="/Home Page.html">Logout</a></h2> -->
    </div>
    <h2 class="mt-4"><a href="/Home Page.html">Logout</a></h2>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>