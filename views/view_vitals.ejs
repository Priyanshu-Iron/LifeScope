<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Vitals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container mt-4">
        <h1>Your Vitals</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Heart Rate</th>
                    <th>Blood Pressure</th>
                    <th>Warnings</th>
                </tr>
            </thead>
            <tbody>
                <% vitals.forEach(vital => { %>
                    <tr>
                        <td><%= new Date(vital.date).toLocaleDateString() %></td>
                        <td><%= vital.time %></td>
                        <td><%= vital.heartRate %> bpm</td>
                        <td><%= vital.bloodPressure %></td>
                        <td>
                            <% 
                            // Assuming bloodPressure is in "systolic/diastolic" format
                            const [systolic, diastolic] = vital.bloodPressure.split('/').map(Number);
                            const warning = (systolic > 140 || diastolic > 90) ? 'High' : 'Normal';
                            const color = (systolic > 140 || diastolic > 90) ? 'red' : 'green';
                            %>
                            <span style="color: <%= color %>">
                                <%= warning %>
                            </span>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/dashboard" class="btn btn-primary mt-3" aria-label="Back to Dashboard">Back to Dashboard</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
